<Page x:Class="BardMusicPlayer.Updater.Download"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BardMusicPlayer.Updater"
      mc:Ignorable="d" 
      d:DesignHeight="200" d:DesignWidth="350"
      Title="Download">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <ProgressBar Grid.Row="0" x:Name="ProgressBar" Margin="10,10,10,10" Value="0" />

        <TextBlock Grid.Row="1" x:Name="CountDown" HorizontalAlignment="Center" Margin="10,10,10,10" ></TextBlock>

        <TextBlock Grid.Row="2" x:Name="FileName" Margin="10,10,10,10" ></TextBlock>
    </Grid>
</Page>
